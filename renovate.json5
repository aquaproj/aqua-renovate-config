{
  extends: [
    "config:base",
  ],
  automerge: true,
  platformAutomerge: true,
  prHourlyLimit: 0,
  prConcurrentLimit: 0,
  branchConcurrentLimit: 0,
  regexManagers: [
    {
      fileMatch: ["README\\.md"],
      matchStrings: [
        "(version|ref): \"?(?<currentValue>.*)\"? +# renovate: depName=(?<depName>.*)"
      ],
      datasourceTemplate: "github-releases",
    },
    {
      fileMatch: ["README\\.md"],
      "matchStrings": [
        "\"github>clivm/clivm-renovate-config#(?<currentValue>[^\" \\n\\(]+)",
        "\"github>clivm/clivm-renovate-config:.*#(?<currentValue>[^\" \\n\\(]+)",
        "\"github>clivm/clivm-renovate-config/.*#(?<currentValue>[^\" \\n\\(]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "clivm/clivm-renovate-config"
    },
    {
      fileMatch: ["README\\.md"],
      "matchStrings": [
        " +['\"]?clivm_version['\"]? *: +['\"]?(?<currentValue>[^'\" \\n]+)['\"]?"
      ],
      "depNameTemplate": "clivm/clivm",
      "datasourceTemplate": "github-releases"
    },
    {
      fileMatch: ["README\\.md"],
      "matchStrings": [
        "raw\\.githubusercontent\\.com/clivm/clivm-installer/(?<currentValue>.*?)/clivm-installer"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "clivm/clivm-installer"
    }
  ]
}
